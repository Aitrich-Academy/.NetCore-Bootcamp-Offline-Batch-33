@page
@model TravelsDb.Pages.Work.IndexModel
@{
    ViewData["Title"] = "Destinations";
    var role = HttpContext.Session.GetString("UserRole");
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold">Destinations</h4>
            <span class="badge bg-info text-dark">
                @Model.Destinations.Count Destinations Found
            </span>
        </div>

        @if (role == "Admin")
        {
            <button class="btn btn-primary rounded-pill"
                    data-bs-toggle="modal"
                    data-bs-target="#addDestinationModal">
                + Add Destination
            </button>
        }
    </div>

    <!-- Cards -->
    <div class="row g-4">
        @foreach (var item in Model.Destinations)
        {
            <div class="col-md-3">
                <div class="card shadow-sm border-0 rounded-4 h-100">

                    <img src="@item.ImagePath"
                         class="card-img-top rounded-top-4"
                         style="height:180px; object-fit:cover;" />

                    <div class="card-body">
                        <h6 class="fw-bold">@item.Name</h6>
                        <p class="text-muted small">@item.Description</p>

                        @if (role == "Admin")
                        {
                            <!-- Delete -->
                            <form method="post" asp-page-handler="Delete">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button class="btn btn-outline-danger btn-sm rounded-pill">
                                    Delete
                                </button>
                            </form>

                            <!-- Edit Button -->
                            <button class="btn btn-warning btn-sm rounded-pill mt-2"
                                    data-bs-toggle="modal"
                                    data-bs-target="#editModal-@item.Id">
                                Edit
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Edit Modal -->
            <div class="modal fade" id="editModal-@item.Id" tabindex="-1">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content p-4 rounded-4">

                        <h5 class="fw-bold mb-3">Edit Destination</h5>

                        <form method="post" asp-page-handler="Edit" enctype="multipart/form-data">

                            <input type="hidden" name="Id" value="@item.Id" />

                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <input name="Name"
                                       value="@item.Name"
                                       class="form-control" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea name="Description"
                                          class="form-control"
                                          rows="4">@item.Description</textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">New Image (optional)</label>
                                <input type="file"
                                       name="ImageFile"
                                       class="form-control" />
                            </div>

                            <button type="submit"
                                    class="btn btn-primary rounded-pill">
                                Update
                            </button>

                        </form>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Add Modal (unchanged) -->
<div class="modal fade" id="addDestinationModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content p-4 rounded-4">

            <h5 class="fw-bold mb-3">Add Destination</h5>

            <form method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <input asp-for="Destination.Name"
                           class="form-control"
                           placeholder="Destination Name" />
                </div>

                <div class="mb-3">
                    <textarea asp-for="Destination.Description"
                              class="form-control"
                              rows="4"
                              placeholder="Description"></textarea>
                </div>

                <div class="mb-3">
                    <input asp-for="ImageFile"
                           type="file"
                           class="form-control" />
                </div>

                <button type="submit"
                        class="btn btn-primary rounded-pill">
                    Add Destination
                </button>
            </form>

        </div>
    </div>
</div>






@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (!ViewData.ModelState.IsValid)
    {
        <script>
            var myModal = new bootstrap.Modal(document.getElementById('addDestinationModal'));
            myModal.show();
        </script>
    }
}