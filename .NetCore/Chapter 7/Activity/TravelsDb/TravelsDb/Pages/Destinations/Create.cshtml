@page
@model TravelsDb.Pages.Destinations.CreateModel
@{
    ViewData["Title"] = "Create Destination";
}

<div class="container mt-4">
    <h4>Create Destination</h4>

    <form method="post" enctype="multipart/form-data">

        <div class="mb-3">
            <label>Name</label>
            <input asp-for="Destination.Name" class="form-control" />
            <span asp-validation-for="Destination.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Description</label>
            <textarea asp-for="Destination.Description"
                      class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label>Image</label>
            <input asp-for="ImageFile"
                   type="file"
                   class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">
            Save
        </button>

    </form>
</div>