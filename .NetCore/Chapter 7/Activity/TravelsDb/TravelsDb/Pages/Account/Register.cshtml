@page
@model TravelsDb.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h1> Register </h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="user.UserName"></label>
                <input asp-for="user.UserName" class="form-control" />
                <span asp-validation-for="user.UserName" class="text-danger"></span>
            </div>
            <div class="form-group" accesskey="U">
                <label asp-for="user.Email"></label>
                <input asp-for="user.Email" class="form-control" />
                <span asp-validation-for="user.Email" class="text-danger"></span>
            </div>
            <div class="form-group" accesskey="P">
                <label asp-for="user.Password"></label>
                <input asp-for="user.Password" class="form-control" />
                <span asp-validation-for="user.Password" class="text-danger"></span>
            </div>
            <input type="submit" value="Register" class="btn btn-primary" />
        </form>
    </div>
</div>