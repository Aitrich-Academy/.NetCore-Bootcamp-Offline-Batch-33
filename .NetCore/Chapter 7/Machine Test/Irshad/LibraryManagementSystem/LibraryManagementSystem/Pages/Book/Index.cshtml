@page
@model LibraryManagementSystem.Pages.Book.IndexModel
@{
    ViewData["Title"] = "Books";
    var role = HttpContext.Session.GetString("UserRole");
}
@if (role == "Admin")
{
    <a class="btn btn-primary float-end" asp-page="./Create">Add Book</a>
}
<h1>Books List</h1>
<table class="table table-responsive table-hover align-middle">
    <thead>
        <tr class="text-center">
            <th>@Html.DisplayNameFor(Model => Model.Books[0].Title)</th>
            <th>@Html.DisplayNameFor(Model => Model.Books[0].Author)</th>
            <th>@Html.DisplayNameFor(Model => Model.Books[0].Quantity)</th>
            <th>@Html.DisplayNameFor(Model => Model.Books[0].CreatedAt)</th>
            @if (role == "Admin")
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr class="text-center">
                <td>@Html.DisplayFor(modelItem => book.Title)</td>
                <td>@Html.DisplayFor(modelItem => book.Author)</td>
                <td>@Html.DisplayFor(modelItem => book.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => book.CreatedAt)</td>
                <td>
                    @if (role == "Admin")
                    {
                        <a asp-page="./Edit" asp-route-id="@book.Id" class="btn btn-primary">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@book.Id" class="btn btn-primary">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
