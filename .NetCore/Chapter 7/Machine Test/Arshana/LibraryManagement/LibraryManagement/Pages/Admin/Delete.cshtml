@page
@model LibraryManagementSystem.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "Delete Books";
}

<h2>Delete Books (Admin Only)</h2>

<div class="mb-3">
    <a class="btn btn-success" asp-page="/Admin/Create">Add Book</a>
    <a class="btn btn-secondary" asp-page="/Admin/Index">Back to Dashboard</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Quantity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.Books)
        {
            <tr>
                <td>@b.Id</td>
                <td>@b.Title</td>
                <td>@b.Author</td>
                <td>@b.Quantity</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@b.Id"
                          onsubmit="return confirm('Delete this book?');">
                        <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>