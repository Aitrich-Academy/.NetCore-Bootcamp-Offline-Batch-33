@page
@model LibraryManagementSystem.Pages.Admin.CreateModel
@{
    ViewData["Title"] = "Add Book";
}

<h2>Add Book</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input class="form-control" asp-for="Book.Title" />
        <span class="text-danger" asp-validation-for="Book.Title"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Author</label>
        <input class="form-control" asp-for="Book.Author" />
        <span class="text-danger" asp-validation-for="Book.Author"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Quantity</label>
        <input class="form-control" asp-for="Book.Quantity" type="number" />
        <span class="text-danger" asp-validation-for="Book.Quantity"></span>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" asp-page="/Admin/Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}