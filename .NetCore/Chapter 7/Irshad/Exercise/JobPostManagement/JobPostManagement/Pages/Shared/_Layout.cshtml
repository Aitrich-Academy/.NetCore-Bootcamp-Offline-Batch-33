@{
    var username = Context.Session.GetString("Username");
    var role = Context.Session.GetString("UserRole");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobPostManagement</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JobPostManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">JobPostManagement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        @* 
                        <li class="nav-item">
                            <a class="nav-link float-end text-dark" asp-area="" asp-page="/Account/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link float-end text-dark" asp-area="" asp-page="/Account/Login">Login</a>
                        </li> *@

                        @if (username != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Jobs/Index">Jobs</a>
                            </li>

                            @if (role == "User")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-page="/Jobs/AppliedJobs">Applied Jobs</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">

                        @if (username == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Account/Register">Register</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Account/Login">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <span class="nav-link text-warning">
                                    @username (@role)
                                </span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-page="/Account/Logout">Logout</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - JobPostManagement - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
